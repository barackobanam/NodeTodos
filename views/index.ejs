<html ng-app ='app.todos'>
  <head>
    <title><%= title %></title>
    <!--<link rel='stylesheet' href='/stylesheets/style.css' />-->
    <!-- Bootstrap -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" >
    <!--<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" ></script>-->

    <!-- font awsome -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- angular js -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.min.js" ></script>

    <!-- load controller angularjs -->
    <script src="/javascripts/todosApp/main.js" ></script>
    <script src="/javascripts/todosApp/svTodo.js" ></script>

    <!-- load app css -->
    <link rel="stylesheet" href="/stylesheets/style.css" />

    <!-- xeditable -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.5.0/css/xeditable.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-xeditable/0.5.0/js/xeditable.min.js"></script>
  </head>
  <body ng-controller="todosController">
    <div class="container">
      <div class="jumbotron">
        <h1>Express with MySQL  <span class="label label-primary">10</span></h1>
      </div>

      <div class="row">
        <div class="col col-sm-6 col-sm-offset-4" >
          <div class="form-group" ng-repeat="todo in todos">
            <input type="checkbox" ng-model="todo.isDone" ng-true-value="1" ng-false-value="0" ng-change="updateTodo(todo)"/>
            <a href ng-click="removeTodo(todo);"><i class="fa fa-remove"></i></a>
            <a href ng-click="textBtnForm.$show()" ng-hide="textBtnForm.$visible"><i class="fa fa-edit"></i></a>
            <span ng-class="{strike:todo.isDone}" editable-text="todo.text" e-form="textBtnForm" onaftersave="updateTodo(todo);">{{todo.text}}</span>
          </div>
          <p class="text-center" ng-show="loading"><i class="fa fa-spinner fa-spin fa-3x"></i></p>
        </div>
      </div>

      <div class="row">
        <div class="col col-sm-8 col-sm-offset-3 text-center">
          <div class="form-group">
            <input type="text" ng-model="newTodo.text" class="form-control" placeholder="what do you want to do?"/>
          </div>
            <input type="button" class="btn btn-primary" value = "ADD" ng-click="createTodo();" ng-disabled="!newTodo.text">

        </div>
      </div>
    </div>
  </body>
</html>
